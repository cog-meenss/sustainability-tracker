{
  "description": "Configuration for API service analysis",
  "project_type": "api_service",
  "ignore_patterns": [
    "node_modules",
    "build",
    "dist",
    "target",
    ".gradle",
    "logs",
    "tmp",
    ".git",
    ".vscode",
    ".idea",
    "coverage",
    "test-results"
  ],
  "analysis_depth": "comprehensive",
  "carbon_calculation": {
    "default_grid_type": "global_average",
    "include_development_energy": true,
    "include_deployment_energy": true,
    "include_runtime_energy": true,
    "estimated_development_hours": 320,
    "runtime_characteristics": {
      "requests_per_day": 10000,
      "average_response_time_ms": 200,
      "database_queries_per_request": 3,
      "cache_hit_ratio": 0.8
    }
  },
  "reporting": {
    "default_formats": ["json", "html", "csv"],
    "include_optimization_guide": true,
    "include_comparison_metrics": true,
    "include_performance_correlation": true
  },
  "api_specific": {
    "analyze_endpoint_complexity": true,
    "check_database_efficiency": true,
    "analyze_caching_strategy": true,
    "check_async_patterns": true,
    "monitor_memory_usage": true
  },
  "optimization_targets": {
    "response_time_ms": 150,
    "memory_usage_mb": 512,
    "cpu_utilization_percent": 60,
    "database_connections": 20
  },
  "frameworks": {
    "express": {
      "check_middleware_overhead": true,
      "analyze_route_complexity": true
    },
    "fastapi": {
      "check_async_endpoints": true,
      "analyze_dependency_injection": true
    },
    "django": {
      "check_orm_efficiency": true,
      "analyze_middleware_chain": true
    },
    "spring": {
      "check_bean_lifecycle": true,
      "analyze_jvm_performance": true
    }
  },
  "database": {
    "analyze_query_patterns": true,
    "check_index_usage": true,
    "monitor_connection_pools": true
  }
}