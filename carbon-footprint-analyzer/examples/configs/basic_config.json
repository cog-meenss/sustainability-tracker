{
  "description": "Minimal configuration for basic project analysis",
  "project_type": "general",
  "ignore_patterns": [
    ".git",
    "node_modules",
    "__pycache__",
    "build",
    "dist",
    "target",
    ".vscode",
    ".idea"
  ],
  "analysis_depth": "basic",
  "carbon_calculation": {
    "default_grid_type": "global_average",
    "include_development_energy": false,
    "include_deployment_energy": false
  },
  "reporting": {
    "default_formats": ["json"],
    "include_optimization_guide": false,
    "include_comparison_metrics": false
  }
}