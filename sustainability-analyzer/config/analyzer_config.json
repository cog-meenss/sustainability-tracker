{
  "sustainability_thresholds": {
    "energy_efficiency_min": 75,
    "resource_utilization_max": 85,
    "carbon_footprint_max": 50,
    "performance_optimization_min": 80,
    "overall_score_min": 75
  },
  "analysis_settings": {
    "analysis_depth": "comprehensive",
    "include_file_details": true,
    "generate_recommendations": true,
    "max_issues_reported": 100,
    "exclude_directories": [
      ".git",
      "node_modules", 
      "__pycache__",
      ".venv",
      "venv",
      "build",
      "dist",
      "target",
      ".next",
      "coverage"
    ],
    "exclude_files": [
      "*.min.js",
      "*.bundle.js",
      "*.map",
      "*.lock",
      "package-lock.json",
      "yarn.lock"
    ]
  },
  "languages": {
    "python": {
      "enabled": true,
      "rules": {
        "async_patterns": {
          "weight": 15,
          "positive_indicators": [
            "async def",
            "await ",
            "asyncio",
            "aiohttp",
            "aiofiles"
          ],
          "negative_indicators": [
            "time.sleep(",
            "requests.get(",
            "urllib.request",
            "synchronous blocking calls"
          ]
        },
        "memory_efficiency": {
          "weight": 20,
          "positive_indicators": [
            "__slots__",
            "generator",
            "yield ",
            "itertools",
            "contextlib"
          ],
          "negative_indicators": [
            "global ",
            "import *",
            "exec(",
            "eval(",
            "memory leaks"
          ]
        },
        "performance_patterns": {
          "weight": 25,
          "positive_indicators": [
            "numpy",
            "pandas",
            "cython",
            "numba",
            "list comprehension"
          ],
          "negative_indicators": [
            "nested for loops",
            "repeated string concatenation",
            "inefficient algorithms"
          ]
        }
      },
      "file_extensions": [".py", ".pyw", ".pyx"],
      "sustainability_weight": 1.0
    },
    "javascript": {
      "enabled": true,
      "rules": {
        "async_patterns": {
          "weight": 15,
          "positive_indicators": [
            "async function",
            "await ",
            "Promise.all",
            "Promise.race",
            "fetch("
          ],
          "negative_indicators": [
            "XMLHttpRequest",
            "setTimeout",
            "setInterval",
            "synchronous AJAX"
          ]
        },
        "bundle_optimization": {
          "weight": 20,
          "positive_indicators": [
            "import()",
            "dynamic import",
            "tree shaking",
            "code splitting",
            "lazy loading"
          ],
          "negative_indicators": [
            "require() entire library",
            "large bundles",
            "unused imports"
          ]
        },
        "dom_efficiency": {
          "weight": 18,
          "positive_indicators": [
            "document.fragment",
            "virtual DOM",
            "requestAnimationFrame",
            "efficient DOM queries"
          ],
          "negative_indicators": [
            "innerHTML",
            "document.write",
            "frequent DOM manipulation",
            "synchronous DOM operations"
          ]
        }
      },
      "file_extensions": [".js", ".mjs", ".jsx", ".ts", ".tsx"],
      "sustainability_weight": 1.0
    },
    "java": {
      "enabled": true,
      "rules": {
        "memory_management": {
          "weight": 22,
          "positive_indicators": [
            "StringBuilder",
            "ArrayList",
            "HashMap",
            "Stream API",
            "try-with-resources"
          ],
          "negative_indicators": [
            "String concatenation in loops",
            "Vector",
            "Hashtable",
            "memory leaks"
          ]
        },
        "concurrency": {
          "weight": 18,
          "positive_indicators": [
            "CompletableFuture",
            "parallel streams",
            "ExecutorService",
            "ForkJoinPool"
          ],
          "negative_indicators": [
            "excessive synchronized blocks",
            "Thread.sleep",
            "busy waiting"
          ]
        },
        "gc_efficiency": {
          "weight": 15,
          "positive_indicators": [
            "object pooling",
            "primitive collections",
            "efficient data structures"
          ],
          "negative_indicators": [
            "excessive object creation",
            "large object graphs",
            "memory churn"
          ]
        }
      },
      "file_extensions": [".java"],
      "sustainability_weight": 1.0
    },
    "csharp": {
      "enabled": true,
      "rules": {
        "async_patterns": {
          "weight": 18,
          "positive_indicators": [
            "async Task",
            "await ",
            "ConfigureAwait(false)",
            "Task.Run"
          ],
          "negative_indicators": [
            ".Result",
            ".Wait()",
            "synchronous over async"
          ]
        },
        "memory_efficiency": {
          "weight": 20,
          "positive_indicators": [
            "using statements",
            "IDisposable",
            "Span<T>",
            "Memory<T>",
            "stackalloc"
          ],
          "negative_indicators": [
            "memory leaks",
            "excessive allocations",
            "large object heap pressure"
          ]
        }
      },
      "file_extensions": [".cs"],
      "sustainability_weight": 1.0
    },
    "go": {
      "enabled": true,
      "rules": {
        "concurrency": {
          "weight": 25,
          "positive_indicators": [
            "goroutines",
            "channels",
            "select statements",
            "context.Context"
          ],
          "negative_indicators": [
            "mutex overuse",
            "goroutine leaks",
            "blocking operations"
          ]
        },
        "memory_efficiency": {
          "weight": 20,
          "positive_indicators": [
            "sync.Pool",
            "efficient slices",
            "string builder"
          ],
          "negative_indicators": [
            "memory leaks",
            "excessive allocations"
          ]
        }
      },
      "file_extensions": [".go"],
      "sustainability_weight": 1.0
    },
    "rust": {
      "enabled": true,
      "rules": {
        "zero_cost_abstractions": {
          "weight": 30,
          "positive_indicators": [
            "zero-cost abstractions",
            "compile-time optimizations",
            "efficient iterators"
          ],
          "negative_indicators": [
            "runtime overhead",
            "unnecessary allocations"
          ]
        },
        "memory_safety": {
          "weight": 25,
          "positive_indicators": [
            "ownership system",
            "borrowing",
            "zero-copy operations"
          ],
          "negative_indicators": [
            "unsafe blocks overuse",
            "memory leaks in unsafe code"
          ]
        }
      },
      "file_extensions": [".rs"],
      "sustainability_weight": 1.2
    }
  },
  "reporting": {
    "formats": ["html", "json", "azure_devops"],
    "include_trends": true,
    "generate_recommendations": true,
    "max_recommendations": 10,
    "include_file_details": true,
    "chart_types": ["radar", "pie", "bar"],
    "export_formats": ["html", "pdf", "json"]
  },
  "quality_gates": {
    "enabled": true,
    "fail_on_threshold": false,
    "warning_on_threshold": true,
    "thresholds": {
      "overall_score": {
        "min": 75,
        "warning": 60
      },
      "energy_efficiency": {
        "min": 70,
        "warning": 50
      },
      "carbon_footprint": {
        "max": 40,
        "warning": 60
      }
    }
  },
  "notifications": {
    "teams_webhook": "",
    "slack_webhook": "",
    "email_recipients": [],
    "notify_on_failure": true,
    "notify_on_improvement": true,
    "notify_on_regression": true
  },
  "trend_analysis": {
    "enabled": true,
    "retention_days": 90,
    "comparison_periods": ["1d", "7d", "30d"],
    "baseline_calculation": "rolling_average",
    "regression_threshold": 5.0
  },
  "advanced_analysis": {
    "complexity_analysis": true,
    "dependency_analysis": true,
    "security_implications": false,
    "performance_profiling": false,
    "carbon_estimation": true
  },
  "integration": {
    "azure_devops": {
      "publish_test_results": true,
      "create_work_items": false,
      "update_pr_comments": true
    },
    "github": {
      "create_check_runs": true,
      "update_pr_comments": true,
      "create_issues": false
    },
    "jenkins": {
      "publish_html_reports": true,
      "archive_artifacts": true,
      "set_build_status": true
    }
  }
}